<!--
theme name:     Hursty Blue
version         1.0
-->

<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

   <view name="system">
      <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/backgroundmenu.png</path>
      </image>
   </view>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <textColor>777777</textColor>
         <iconColor>77777750</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/background.png</path>
      </image>
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 0.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.1875 0.175</pos>
         <size>0.45 0.675</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>e22828</selectedColor>
         <primaryColor>eaeaea</primaryColor>
         <secondaryColor>eaeaea</secondaryColor>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.0175</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.075</pos>
         <maxSize>0.35 0.15</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.46 0.175</pos>
         <size>0.3 0.7</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_playcount, md_lastplayed">
         <pos>1 1</pos>
      </text>
      <text name="md_description,md_lbl_players,md_players,md_genre,md_releasedate">
         <color>777777</color>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.0175</fontSize>
      </text>
      <rating name="md_rating">
         <pos>0.1 1.575</pos>
         <size>0 0.025</size>
         <filledPath>./_inc/images/star_filled.svg</filledPath>
         <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
      </rating>
      <text name="md_description">
         <pos>0.1 1.625</pos>
         <size>0.4625 0.175</size>
         <color>cccccc</color>
      </text>
      <text name="md_lbl_players">
         <pos>0.1 1.825</pos>
         <size>0.0625 0.025</size>
      </text>
      <text name="md_players">
         <pos>0.15 1.825</pos>
         <size>0.0375 0.025</size>
      </text>
      <datetime name="md_releasedate">
         <pos>0.175 1.825</pos>
         <size>0.075 0.025</size>
      </datetime>
      <text name="md_genre">
         <pos>0.2625 1.825</pos>
         <size>0.1 0.025</size>
      </text>
      <textlist name="gamelist">
         <pos>0.01 0.175</pos>
         <size>0.21 0.71</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="detailed">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 1.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <image name="md_image">
         <origin>.53 .54</origin>
         <pos>0.47 0.62</pos>
         <zIndex>5</zIndex>
         <maxSize>0.3 0.4</maxSize>
      </image>
      <image name="md_marquee">
         <pos>0.03 0.035</pos>
         <origin>0 0</origin>
         <maxSize>0.1 0.1</maxSize>
      </image>
   </view>

   <view name="video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.82 1.875</pos>
         <maxSize>0.15 0.05</maxSize>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.465 0.6</pos>
         <zIndex>5</zIndex>
         <maxSize>0.36 0.48</maxSize>
         <delay>0.01</delay>
         <default>./_inc/videos/static.mp4</default>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
      <image name="md_marquee">
         <pos>0.03 0.035</pos>
         <origin>0 0</origin>
         <maxSize>0.1 0.1</maxSize>
      </image>
   </view>
   
</theme>
